# Main configuration
auto-reload yes
notify-always yes
notify-program "/usr/bin/notify-send"
reload-threads 100
reload-time 10
browser "$BROWSER %u"

# Coloring
# color background color2 black
# color info color10 color22 bold
# color listfocus default default bold
# color listfocus_unread default default bold
highlight feedlist "---.*---" default default bold
highlight feedlist ".*0/0.." default default invis

# Macros
macro , open-in-browser
macro m set browser "mpv %u" ; open-in-browser ; set browser "lynx %u"
