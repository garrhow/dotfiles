# muttrc - NeoMutt configuration

set editor = "nvim -c 'set syntax=mail ft=mail enc=utf-8'"

set sort = "threads"
set sort_aux = "reverse-date"
set sort_browser = "reverse-date"

# Subscriptions
subscribe "gentoo-.*@gentoo\\.org"

# Imports
source ~/.config/mutt/bindings.rc
source ~/.config/mutt/colors.rc
source ~/.config/mutt/gpg.rc
source ~/.config/mutt/imap.rc
source ~/.config/mutt/inboxes.rc
source ~/.config/mutt/sidebar.rc
source ~/.config/mutt/smtp.rc

# Mail headers
my_hdr Reply-To: "garrett@mersh.com"
my_hdr X-Operating-System: `uname -a`

# Macros
macro index,pager a "<pipe-message>abook --datafile $XDG_DATA_HOME/abook/addressbook --add-email-quiet<return>" "Add this sender to Abook"

# Other
alternative_order text/plain text/html *
auto_view text/html
set auto_tag = yes
set certificate_file = "~/.config/mutt/certificates"
set date_format = "%m/%d %I:%M%p"
set fast_reply
set header_cache = "~/.config/mutt/cache/headers"
set mailcap_path = "~/.config/mutt/mailcap"
set markers = no
set message_cachedir = "~/.config/mutt/cache/bodies"
set query_command = "abook --datafile $XDG_DATA_HOME/abook/addressbook --mutt-query '%s'"
set send_charset="utf-8"
# set signature = "~/.config/mutt/signature"
# set ssl_forcetls = yes
set ssl_starttls = yes
set timeout = 5
