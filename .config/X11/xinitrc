#!/bin/sh

modmap=$XDG_CONFIG_HOME/X11/xmodmap
resources=$XDG_CONFIG_HOME/X11/xresources
wallpaper=$XDG_DATA_HOME/wallpaper

xwallpaper --center $wallpaper # Set background
xrdb $resources # Load Xresources
xmodmap $modmap # Load Xmodmap
picom & # Start picom
slstatus & # Start status bar
dunst & # Start notification daemon
exec dbus-launch dwm # Launch dwm
