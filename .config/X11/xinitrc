#!/bin/sh

modmap=$XDG_CONFIG_HOME/X11/xmodmap
resources=$XDG_CONFIG_HOME/X11/xresources
wallpaper=$XDG_DATA_HOME/wallpaper

# Set background
xwallpaper --center $wallpaper &

# Load Xresources
xrdb $resources &

# Load Xmodmap
xmodmap $modmap &

# Start picom
picom &

# Start status bar
slstatus &

# Start notification daemon
dunst &

# Execute dwm
exec dbus-launch dwm
