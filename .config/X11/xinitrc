#!/bin/sh

modmap=$XDG_CONFIG_HOME/X11/xmodmap
resources=$XDG_CONFIG_HOME/X11/xresources
wallpaper=$XDG_DATA_HOME/wallpaper

# Set background
xwallpaper --center $wallpaper &

# Load Xresources
xrdb $resources &

# Load Xmodmap
xmodmap $modmap &

# Start picom
picom &

# Start status bar
slstatus &

# Start pipewire
gentoo-pipewire-launcher &

# Start x11vnc
x11vnc -display :0 -forever -nomodtweak &

# Execute dwm
exec dwm
