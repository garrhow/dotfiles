#!/bin/sh

modmap=$XDG_CONFIG_HOME/X11/xmodmap
resources=$XDG_CONFIG_HOME/X11/xresources
wallpaper=$XDG_DATA_HOME/wallpaper

# Set display configuration
xrandr --output HDMI-1 --primary --mode 1920x1080 --rotate normal --output DVI-D-1 --mode 1920x1080 --rotate normal --right-of HDMI-1 --rate 144 &

# Set background
xwallpaper --center $wallpaper &

# Load Xresources
xrdb $resources

# Load Xmodmap
xmodmap $modmap

# Start picom
picom &

# Start status bar
slstatus &

# Start dunst
dunst &

# Execute dwm
exec dbus-launch dwm
