##############
# Appearance #
##############

# Show notifications at the specified position on the output.
anchor=top-center

# Sets the font, in Pango format.
font=sans-serif 10

# If set to 1, icons are shown in notifications.
icons=1

# Sets the margin of each edge to the size specified by the directional value.
margin=8

# Sets the maximum icon size.
max-icon-size=48

# Sets the padding on each side to the size specified by the directional value.
padding=8

# Sets the notification text alignment.
text-alignment=left

# Sets the width of notification popups.
width=400

###########
# Borders #
###########

# Sets popup corner radius.
border-radius=8

# Sets the popup border size in pixels.
border-size=0

##########
# Colors #
##########

# Sets the background color.
background-color=#3B4252ff

# Sets the popup progress indicator color.
progress-color=over #5E81ACff

# Sets the text color.
text-color=#D8DEE9ff

###########
# General #
###########

# Sets the default timeout in milliseconds.
default-timeout=10000

# Sets the maximum number of expired notifications to keep in the history buffer.
max-history=1000

# Sets the maximum number of visible notifications.
max-visible=1
