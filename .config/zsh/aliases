# Emacs in the terminal
alias emacs="emacs -nw"

# XDG Base Directory fixes
alias wget="wget --hsts-file=\"$XDG_DATA_HOME/wget-hsts\""

# Sway aliases
if [ ! -e /dev/nvidia0 ]; then
	alias sway="dbus-launch --sh-syntax --exit-with-session sway"
else
	alias sway="dbus-launch --sh-syntax --exit-with-session sway --unsupported-gpu"
fi
