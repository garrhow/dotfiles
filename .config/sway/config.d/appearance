##
# Appearance configuration
##

# Cursor
seat seat0 xcursor_theme Nordic 16

# Font
font pango:sans 12

# Gaps
gaps inner 32

# GTK theming
exec_always {
	gsettings set org.gnome.desktop.interface gtk-theme 'Pop-Nord'
	gsettings set org.gnome.desktop.interface icon-theme 'Papirus'
	gsettings set org.gnome.desktop.interface cursor-theme 'Nordic'
	gsettings set org.gnome.desktop.interface cursor-size 16
	gsettings set org.gnome.desktop.interface font-name 'sans 12'
}

# Status bar
bar {
	swaybar_command waybar
}

# Wallpaper
output * bg ~/.local/share/wallpaper fill

# Window borders
default_border pixel 4
default_floating_border normal
hide_edge_borders smart

# vim: syntax=swayconfig
