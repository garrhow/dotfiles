##
# Appearance configuration
##

# Colors (border, background, text, indicator, child_border)
client.focused #2E3440 #3B4252 #E5E9F0 #3B4252 #3B4252
client.unfocused #2E3440 #2E3440 #E5E9F0 #2E3440 #2E3440
client.urgent #2E3440 #BF616A #2E3440 #BF616A #BF616A

# Cursor
seat seat0 hide_cursor 10000

# Font
font pango:sans 10

# Gaps
gaps inner 32

# GTK theming
exec_always {
	gsettings set org.gnome.desktop.interface gtk-theme 'polar-dark'
	gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'
	gsettings set org.gnome.desktop.interface icon-theme 'papirus'
	gsettings set org.gnome.desktop.interface cursor-size 8
	gsettings set org.gnome.desktop.interface font-name 'sans 11'
}

# Status bar
bar {
	swaybar_command waybar
}

# Title bars
for_window [title="."] title_format "<b>%title</b>"
title_align center
titlebar_border_thickness 0
titlebar_padding 8 8

# Wallpaper
output * bg ~/.local/share/wallpaper fill

# Window borders
default_border normal 4
default_floating_border normal
hide_edge_borders smart

# vim: syntax=swayconfig
