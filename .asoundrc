pcm.!default {
	type plug
	slave.pcm "sym"
}

pcm.sym {
	type asym
	capture.pcm "snoop"
	playback.pcm "mix"
}

pcm.mix {
	type dmix
	ipc_key 1024
	slave {
		pcm "hw:0,0"
		channels 2
		buffer_size 4096
		period_size 1024
		rate 48000
	}
	bindings {
		0 0
		1 1
	}
}

pcm.snoop {
	type dsnoop
	ipc_key 2048
	slave {
		pcm "hw:0,0"
		channels 2
		buffer_size 4096
		period_size 1024
		rate 48000
	}
	bindings {
		0 0
		1 1
	}
}

ctl.mix {
	type hw
	card 0
}

ctl.snoop {
	type hw
	card 0
}
